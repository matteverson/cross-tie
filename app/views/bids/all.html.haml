.h4.subheader All Bids
=link_to "New Bid", new_bid_path, class: "a button radius"
%table
	%thead
		%th
		%th
		%th Address
		%th Vendor
		%th Customer
		%th Total Cost
	%tbody
	-@bids.each do |b|
		%tr
			%td=link_to "Edit", edit_property_bid_path(@property, b)
			%td=link_to "Delete", property_bid_path(@property, b), method: :delete
			%td=link_to "#{Property.find(b.property_id).address}", property_bid_path(Property.find(b.property_id), b)
			%td=link_to "#{b.vendor}", property_bid_path(@property, b)
			%td=b.customer
			%td=b.total_cost
%a.button.radius{href:new_property_bid_path}New Bid
